

{

    "manifest_version" : 3,
    "name" : "Markup",
    "description" : "Base Level Extension", 
    "version" : "1.0",
    "permissions" : [
      "contextMenus",
      "activeTab",
      "scripting",
      "commands",
      "identity"
    ],

    "commands": {
      
      "bold":{
        "suggested_key":{
          "default" : "Ctrl+B",
          "mac" : "Command+B"
        }, 
        "description": "Bold selected text"
      },
      "italic":{
        "suggested_key":{
          "default" : "Ctrl+I",
          "mac" : "Command+I"
        }, 
        "description": "Italicize selected text"
      },
      "underline":{
        "suggested_key":{
          "default" : "Ctrl+Shift+U",
          "mac" : "Command+Shift+U"
        }, 
        "description": "Underline selected text"
      }
    },
    "host_permissions": [
      "*://localhost/*",
      "*://127.0.0.1/*"
    ],

    "icons": {
        "16": "/pictures/icon.png",
        "32":"/pictures/icon.png",
        "48":"/pictures/icon.png",
        "128":"/pictures/icon.png"
    },

    "content_scripts" : [
        {
            "js": ["dist/content.bundle.js"],
            "matches": [
                "<all_urls>",
                "http://localhost/*",
                "http://127.0.0.1/*"
            ]
        }
    ], 

    "background": {
    "service_worker": "dist/background.bundle.js"
  }, 

  "web_accessible_resources": [
    {
      "resources": [
        "pictures/*", "firebase-app.js", "firebase-firestore.js"
      ],
      "matches": ["<all_urls>", "*://localhost/*", "*://127.0.0.1/*"]
  
    }
    ]

  
}


